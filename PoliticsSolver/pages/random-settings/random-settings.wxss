/* 开始按钮 */
.start-container {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background: linear-gradient(135deg, #3A7FED 0%, #5B9FFF 100%);
  color: #fff;
  box-shadow: 0 8rpx 16rpx rgba(58, 127, 237, 0.3);
}