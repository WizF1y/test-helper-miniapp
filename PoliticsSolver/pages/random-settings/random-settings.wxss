/* 引入公共样式 */
@import "/styles/common.wxss";

.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  position: relative;
}

.section-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 6rpx;
  height: 28rpx;
  width: 6rpx;
  background-color: #3A7FED;
  border-radius: 3rpx;
}

.section-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

/* 月份网格 */
.month-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.month-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f7f9fc;
  border-radius: 8rpx;
  border: 3rpx solid #e0e0e0;
  transition: all 0.3s;
  cursor: pointer;
}

.month-item text {
  font-size: 28rpx;
  color: #666;
  transition: all 0.3s;
}

.month-item.active {
  background-color: #3A7FED;
  border-color: #3A7FED;
  box-shadow: 0 4rpx 12rpx rgba(58, 127, 237, 0.3);
}

.month-item.active text {
  color: #fff;
  font-weight: bold;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-around;
  margin-top: 20rpx;
}

.action-btn {
  width: 45%;
  height: 70rpx;
  line-height: 70rpx;
  background-color: #f7f9fc;
  color: #666;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 题目数量网格 */
.count-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.count-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f7f9fc;
  border-radius: 8rpx;
  border: 3rpx solid #e0e0e0;
  transition: all 0.3s;
  cursor: pointer;
}

.count-item text {
  font-size: 28rpx;
