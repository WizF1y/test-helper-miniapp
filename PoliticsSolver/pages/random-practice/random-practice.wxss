/* pages/random-practice/random-practice.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  font-size: 32rpx;
  color: #999;
}

/* 结果页面 */
.result-container {
  padding: 40rpx;
}

.result-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.result-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #3A7FED;
}

.result-stats {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20rpx;
  margin-bottom: 60rpx;
  max-width: 700rpx;
  margin-left: auto;
  margin-right: auto;
}

.stat-item {
  width: calc(50% - 10rpx);
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 20rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.stat-item.correct {
  background: linear-gradient(135deg, #67C23A 0%, #85CE61 100%);
  color: #fff;
}

.stat-item.wrong {
  background: linear-gradient(135deg, #F56C6C 0%, #F78989 100%);
  color: #fff;
}

.stat-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  opacity: 0.8;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
}

.result-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #fff;
  color: #333;
}

.action-btn.primary {
  background-color: #3A7FED;
  color: #fff;
}

/* 答题页面 */
.practice-container {
  padding-bottom: 120rpx;
}

/* 进度条 */
.progress-bar {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.progress-track {
  height: 8rpx;
  background-color: #e5e5e5;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3A7FED 0%, #5B9FFF 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 题目容器 */
.topic-wrapper {
  padding: 20rpx;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx;
  background-color: #fff;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.next-btn,
.finish-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  background-color: #3A7FED;
  color: #fff;
}

.finish-btn {
  background: linear-gradient(135deg, #67C23A 0%, #85CE61 100%);
}
