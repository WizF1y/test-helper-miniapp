/* 引入公共样式 */
@import "/styles/common.wxss";

/* 头部样式 */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.count {
  font-size: 28rpx;
  color: #999;
}

/* 题目列表 */
.topic-list {
  margin-bottom: 40rpx;
}

/* 加载更多 */
.loading-more, .no-more {
  text-align: center;
  padding: 30rpx 0;
  margin-bottom: 140rpx; /* 增加底部间距，确保不被按钮挡住 */
}

.loading-more text, .no-more text {
  font-size: 28rpx;
  color: #999;
}

/* 添加底部提交按钮样式 */
.submit-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.submit-all-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #3A7FED;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

/* 整个容器底部增加安全距离 */
.container {
  padding-bottom: 30rpx;
} 