.topic-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 题目头部 */
.topic-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.topic-index {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-right: 12rpx;
}

.topic-type {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

/* 题目内容 */
.topic-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.option-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.option-item.correct {
  background-color: rgba(76, 175, 80, 0.15) !important;
  border: 1rpx solid #4CAF50 !important;
}

.option-item.wrong {
  background-color: rgba(244, 67, 54, 0.15) !important;
  border: 1rpx solid #F44336 !important;
}

.option-item.selected {
  background-color: rgba(24, 144, 255, 0.15) !important;
  border: 1rpx solid #1890ff !important;
}

.option-key {
  font-weight: bold;
  color: #3A7FED;
  margin-right: 16rpx;
  min-width: 40rpx;
}

.option-item.correct .option-key {
  background-color: #4CAF50 !important;
  color: #fff !important;
}

.option-item.wrong .option-key {
  background-color: #F44336 !important;
  color: #fff !important;
}

.option-item.selected .option-key {
  background-color: #1890ff !important;
  color: #fff !important;
}

.option-content {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  line-height: 1.5;
}

/* 答案解析 */
.answer-analysis {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.answer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.answer-label {
  font-size: 26rpx;
  font-weight: bold;
  color: #3A7FED;
}

.correct-answer {
  color: #07c160;
  font-weight: bold;
}

.analysis-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 操作按钮 */
.topic-actions {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 2rpx solid #eee;
}

/* 调试信息 */
.debug-info {
  font-size: 20rpx;
  color: #007AFF;
  margin-top: 10rpx;
  padding: 10rpx;
  background-color: #f0f8ff;
  border: 1rpx solid #007AFF;
  border-radius: 4rpx;
  font-family: monospace;
  word-break: break-all;
}

.debug-info text {
  display: block;
  margin: 2rpx 0;
}

.action-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.action-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

.action-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
  color: #666;
}

/* 提交按钮区域 */
.submit-area {
  margin: 20rpx 0;
  display: flex;
  justify-content: center;
}

.submit-btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #3A7FED;
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  text-align: center;
}