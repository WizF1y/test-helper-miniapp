# ==========================================
# 微信小程序配置
# ==========================================
# 微信小程序 AppID（从微信公众平台获取）
WECHAT_APPID=your_wechat_app_id
# 微信小程序 AppSecret（从微信公众平台获取）
WECHAT_SECRET=your_wechat_app_secret

# ==========================================
# 应用配置
# ==========================================
# 调试模式：True 启用调试，False 生产环境
DEBUG_MODE=False
# 调试用的 OpenID（仅在 DEBUG_MODE=True 时使用）
DEBUG_OPENID=

# ==========================================
# 数据库配置
# ==========================================
# MySQL 用户名
MYSQL_USER=root
# MySQL 密码（生产环境请使用强密码）
MYSQL_PASSWORD=your_secure_mysql_password
# MySQL 主机地址（Docker 环境使用 mysql，本地开发使用 localhost）
MYSQL_HOST=localhost
# MySQL 数据库名称
MYSQL_DATABASE=sz_exam
# MySQL 端口（默认 3306）
MYSQL_PORT=3306

# ==========================================
# 安全配置
# ==========================================
# JWT 密钥（用于生成和验证 token，请使用强随机字符串）
# 生成方法: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_jwt_secret_key_here_please_change_this

# 管理员密钥（用于管理接口认证，请使用强随机字符串）
ADMIN_KEY=your_secure_admin_key_here_please_change_this

# ==========================================
# 微信支付配置（可选）
# ==========================================
# 微信支付商户号
WECHAT_MCH_ID=
# 微信支付 API 密钥
WECHAT_PAY_KEY=
# 微信支付证书路径
WECHAT_CERT_PATH=
WECHAT_KEY_PATH=

# ==========================================
# 应用服务配置
# ==========================================
# Flask 应用端口
FLASK_PORT=5000
# Gunicorn worker 数量（生产环境）
GUNICORN_WORKERS=4
# 请求超时时间（秒）
REQUEST_TIMEOUT=120

# ==========================================
# 日志配置
# ==========================================
# 日志级别：DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# 日志文件路径
LOG_FILE=logs/app.log
# 日志文件最大大小（字节）
LOG_MAX_BYTES=10485760
# 日志文件备份数量
LOG_BACKUP_COUNT=10